<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:textAlignment="center"

    android:focusable="false"
    android:focusableInTouchMode="false"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"

        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textAlignment="center"

            android:paddingTop="1dp"
            android:paddingBottom="1dp"

            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/titleQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bulogin"
                android:layout_toLeftOf="@+id/webView"
                android:layout_toRightOf="@+id/bulogin"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingRight="3dp"
                android:text="Question"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#565656"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:paddingEnd="1dp"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2015-12-11"
                android:textSize="10dp"

                android:id="@+id/txt_post_date" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textAlignment="center"

            android:paddingTop="1dp"
            android:paddingBottom="1dp"

            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture_path"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignBottom="@+id/txtflollower"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0"


                android:src="@drawable/ic_google" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bulogin"
                android:layout_toLeftOf="@+id/webView"
                android:layout_toRightOf="@+id/bulogin"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingRight="3dp"
                android:text="User name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0894f8"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/followHomeBtn"
                android:layout_width="72dp"
                android:layout_height="38dp"
                android:text="Follow"
                android:textSize="10sp" />


        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question ?"
            android:id="@+id/txt_question"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:textAlignment="gravity"

            android:layout_toLeftOf="@+id/webView"
            android:layout_toRightOf="@+id/bulogin"
            android:layout_toEndOf="@+id/bulogin"
            android:paddingBottom="2dp"
            android:textSize="18dp"
            android:textColor="#040101" />

        <LinearLayout

            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/answerCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bulogin"
                android:layout_toLeftOf="@+id/webView"
                android:layout_toRightOf="@+id/bulogin"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingRight="3dp"
                android:text="78 Answers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#565656"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        android:id="@+id/answerContainer"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textAlignment="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"

            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/txtUserNameAnswer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bulogin"
                android:layout_toLeftOf="@+id/webView"
                android:layout_toRightOf="@+id/bulogin"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingRight="3dp"
                android:text="Best Answer"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#565656"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:paddingEnd="1dp"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2015-12-11"
                android:textSize="10dp"

                android:id="@+id/txt_ans_date" />


        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question ?"
            android:id="@+id/txt_answer"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:textAlignment="gravity"

            android:layout_toLeftOf="@+id/webView"
            android:layout_toRightOf="@+id/bulogin"
            android:layout_toEndOf="@+id/bulogin"
            android:paddingBottom="2dp"
            android:textSize="18dp"
            android:textColor="#040101" />

        <LinearLayout

            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textUpvote"/>

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_upvote"
                android:src="@drawable/ic_google"
                android:layout_marginRight="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textDownvote"/>
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_downvote"
                android:src="@drawable/ic_google"
                android:layout_marginRight="8dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>
</LinearLayout>